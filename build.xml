<project name="passwdhash" default="rebuild">
	<condition property="target.name" value="${ant.project.invoked-targets}" else="rebuild">
		<and>
			<isset property="ant.project.invoked-targets"/>
			<not>
				<equals arg1="${ant.project.invoked-targets}" arg2="" trim="true"/>
			</not>
		</and>
	</condition>

	<target name="_all">
		<ant target="${target.name}" useNativeBasedir="true" antfile="library/build.xml"/>
		<ant target="${target.name}" useNativeBasedir="true" antfile="frontend/build.xml"/>
	</target>

	<target depends="_all" name="rebuild"/>
	<target depends="_all" name="compile"/>
	<target depends="_all" name="jar"/>
	<target depends="_all" name="tests"/>
	<target depends="_all" name="clean"/>
</project>
